.profile
  font-size 1.5em
  word-wrap break-word
  .user
    position relative
    max-width 750px
    max-height 400px
    margin 50px 0 0 5%
    .icon
      img
        width 100px
        height 100px
    .name
      position absolute
      top 18px
      left 105px
      overflow hidden
  .bio
    position relative
    width 90%
    height 375px
    margin 75px 0 0 5%
  .bio-left
    width 60%
  .bio-right
    width 40%
  .bio-left, .bio-right
    height 100%
    padding 5%
    display block
    float left
    overflow hidden

.profile-content
  min-height 0px

.profile-background
  position absolute
  width 100%
  min-height 100%
  max-height 100%
  z-index 0
  overflow hidden
  background #555
  text-align: center
  .img
    display inline-block
    min-height 100%
    max-height 150%
    min-width 100%
    max-width 150%
    position fixed
    top 0
    left 0
  .edit
    position absolute
    top 20px
    left 50px

.edit
  .align-right
    position absolute
    top 10px
    right 10px
