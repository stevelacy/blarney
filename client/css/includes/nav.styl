.navbar
  padding-top 18px
  min-height 90px
  font-size 1.3em
  border-radius 0
  margin 0
  background #fafafa
  z-index 9

// Nav alterations

nav .right-nav
  position relative
  float right

nav .nav-user-pre
  position: relative
  right 75px
  background green-med
  a 
    color #fff !important

nav .nav-user
  cursor pointer
  position absolute
  top 0
  right 20px
  width 40px
  height 40px
  img
    height 50px
  ul
    position absolute
    top 60px
    left -110px
  .navbar, *
    border-radius 0
    -webkit-border-radius 0
    -moz-border-radius 0
    border none
