
.comment
  width 90%
  min-height 100px
  position relative
  display block
  float left
  clear both
  margin 0 0 30px 0
  font-size 1.5em
  .user
    position relative
    top 20px
    left 5%
    min-width 200px
    width 50%
    display block
    float left
  .icon
    width 50px
    height 50px
    display block
    float left
    overflow hidden
  .name
    margin 15px
    display block
    float left
    word-wrap break-word
    max-height 50px
  .message
    width 70%
    min-height 80px
    display block
    float left
    padding 1%
    margin 40px 0 10px 5%
  .rating
    position absolute
    right 10%
    top 30px
    width 50px
    height 50px
    img
      width 50px
    span
      position absolute
      right 16px
      top 12px
      width 20px
      font-size .6em
      text-align center
.comments
  position relative
  width 100%
  min-height 100px
  textarea
    margin-top 10px
    width 100%
    height 150px
    font-family 'Open Sans', sans-serif

.new-comment
  width 80%
  min-height 200px
  padding 20px 5%
  margin 50px 0 0 0
  display block
  float left
  font-size 1.5em
  textarea
    width 100%
    max-width 100%
    min-height 200px
