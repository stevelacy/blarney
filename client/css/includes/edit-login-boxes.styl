
.edit-box, .login-box
  display none
  position absolute
  top 100px
  left 37%
  min-width 250px
  width 25%
  height 300px
  overflow hidden
  .upload-box
    width 80%
    margin 20% 10%
  input[type='file']
    width 100%
    border none
  input[type='submit']
    margin 8% 0 0 0
    display inline-block
  .progress
    width 80%
    height 30px
    margin 10% 10% 20% 10%
  .bar
    height 30px
    width 0%
  .img-preview
    width 80%
    height 90%
    margin 2.5% 0 0 10%
    text-align center
  .img
    display inline-block
    max-width 100%
    max-height 100%
  .next-back
    display none
    position absolute
    bottom 10px
    left 0
    width 100%
  button
    margin 10px
.login-box
  display block
  text-align: center
  .twitter
    min-width 150px
    max-width 50%
    height 40px
    padding 10px
    display inline-block
    box-shadow: 0 0 1px #cdcdcd