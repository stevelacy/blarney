.post
  .date
    font-size 1em

  .title
    margin 1%
    max-width 78%
    word-wrap break-word
  .flag
    float left
  .stats
    position relative
    width 100px
    height 40px
    margin-left 10px
    padding 10px
    img
      width 50px
      display block
      float left
    span
      position absolute
      width 50px
      left 8px
      top 24px
      text-align center
  .content
    margin 2% 0 0 1.5%
    word-wrap break-word
    max-width 75%

  .author
    position absolute
    top 0
    right 0
    width 20%
    height 100%
    font-size 1.3em
    .icon
      margin 20px 0 0 0
      width 50px
      height 50px
    .name
      width 100%
      font-size 1.3em
    .bio
      margin 10px
      max-width 90%
    .icon, .name, .bio
      word-wrap break-word
      display inline-block

   