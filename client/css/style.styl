@import url(http\://fonts.googleapis.com/css?family=Open\+Sans\:300)
body
  font-size 1.4em
  font-family 'Open Sans', sans-serif
  font-weight light


green-light = #659d32
green-med = #507d28

// Resets
a
  text-decoration none
  color green-light !important
  &:hover
    color green-med !important
    text-decoration underline

button:focus
  outline none

.navbar
  padding-top 18px
  min-height 90px
  font-size 1.3em
  border-radius 0
  margin 0
  background #fafafa
  z-index 9

footer
  position relative
  min-height 150px
  width 100%
  padding 20px 0 20px 0
  ul
    text-align center
    li
      list-style-type none
      display inline-block
      width 30%
      margin 1%
      padding 20px


.btn, .btn-lg
  border-radius 0 !important
.btn-elg
  font-size 2em
  width 250px
  height 55px !important
  padding 10px !important

.btn-success
  color #fff
  background-color green-light !important
  border-color #4cae4c
  &:hover
    background-color green-med !important
  a
    color #fff !important

.btn-successhover,.btn-successfocus,.btn-successactive,.btn-success.active,.open .dropdown-toggle.btn-success
  color #fff
  background-color green-med !important
  border-color #398439

textarea, input
  background #fff

// additions


.trans
  -webkit-transition all 0.4s ease
  -moz-transition all 0.4s ease
  -o-transition all 0.4s ease
  transition all 0.4s ease

.block
  display block
  float left

.search
  margin 30px
  width 30%
  input
    width 80%
    height 50px
    color #000
  button
    width 19%
    height 50px
    margin-left 1%

// Nav alterations

nav .right-nav
  position relative
  float right

nav .nav-user-pre
  position: relative
  right 75px
  background green-med
  a 
    color #fff !important

nav .nav-user
  cursor pointer
  position absolute
  top 0
  right 20px
  width 40px
  height 40px
  img
    height 50px
  ul
    position absolute
    top 60px
    left -110px
  .navbar, *
    border-radius 0
    -webkit-border-radius 0
    -moz-border-radius 0
    border none



.position-relative
  position relative

.inline-block
  display inline-block

.box-center
  max-width 1600px
  width 90%
  margin-left 0
  display inline-block

.box-shadow
  box-shadow 0 0 5px rgba(50, 50, 50, .9)

.box-shadow-light
  box-shadow 0 0 3px #dfdfdf

.box-shadow-thin
  box-shadow 0 0 1px #bebebe

.box-shadow-thin-dark
  box-shadow 0 0 5px #000

.bg-white-trans
  background rgba(200, 200, 200, .5)

.bg-white-trans-light
  background rgba(250, 250, 250, .7)

.z-index
  z-index 5

.content
  min-height 700px
  margin-right 1%

.content-cards
  position relative
  width 350px
  height 150px
  margin 1% 1% 2% 1%
  display inline-block
  font-size 2em
  .title
    position absolute
    top 20px
    left 18px
    max-width 300px
    max-height 85px
    overflow hidden
  .user
    position absolute
    bottom 20px
    left 18px
    width 200px
    height 30px
  .icon
    width 30px
    height 30px
    overflow hidden
  .name
    position absolute
    left 35px
    top 10px
  .stats
    position absolute
    right 20px
    bottom 10px
    width 30px
    height 30px
  .likes
    position absolute
    top 7px
    width 30px
    font-size 1em

.post-title
  margin 1%
  max-width 78%
  word-wrap break-word

.post-stats
  position relative
  width 100px
  height 40px
  margin-left 10px
  padding 10px
  img
    width 50px
    display block
    float left
  span
    position absolute
    width 50px
    left 8px
    top 24px
    text-align center

.post-content
  margin 2% 0 0 1.5%
  word-wrap break-word
  max-width 75%

.post-author
  position absolute
  top 0
  right 0
  width 20%
  height 100%
  font-size 1.3em
  .icon
    position relative
    margin 10px 0 0 10px
    width 50px
    height 50px
  .name
    margin 16px
    min-width 50px
    max-width 100%
    font-size 1.3em
  .bio
    margin 10px
    max-width 90%
  .icon, .name, .bio
    word-wrap break-word
    display block
    float left    
    

.comments-box
  position relative
  width 100%
  min-height 100px
  .comment
    width 100%
    min-height 100px
    position relative
    display block
    float left
    clear both
    margin 0 0 30px 0
    font-size 1.5em
  .user
    position relative
    top 20px
    left 5%
    min-width 200px
    width 50%
    display block
    float left
  .icon
    width 50px
    height 50px
    display block
    float left
    overflow hidden
  .name
    margin 15px
    display block
    float left
    word-wrap break-word
    max-height 50px
  .message
    width 70%
    min-height 80px
    display block
    float left
    padding 1%
    margin 40px 0 10px 5%
  .rating
    position absolute
    right 10%
    top 30px
    width 50px
    height 50px
    img
      width 50px
    span
      position absolute
      right 16px
      top 12px
      width 20px
      font-size .6em
      text-align center
  textarea
    margin-top 10px
    width 100%
    height 150px
    font-family 'Open Sans', sans-serif

.new-comment
  width 80%
  min-height 200px
  padding 20px 5%
  margin 50px 0 0 0
  display block
  float left
  font-size 1.5em
  textarea
    width 100%
    min-height 200px
.profile-background
  position absolute
  width 100%
  min-height 100%
  max-height 100%
  z-index 0
  overflow hidden
  background #555
  text-align: center
  .img
    display inline-block
    min-height 100%
    max-height 150%
    min-width 100%
    max-width 150%
    position fixed
    top 0
    left 0
  .edit
    position absolute
    top 40px
    left 50px

.edit-box, .login-box
  display none
  position absolute
  top 100px
  left 37%
  min-width 250px
  width 25%
  height 300px
  overflow hidden
  .upload-box
    width 80%
    margin 20% 10%
  input[type='file']
    width 100%
    border none
  input[type='submit']
    margin 8% 0 0 0
    display inline-block
  .progress
    width 80%
    height 30px
    margin 10% 10% 20% 10%
  .bar
    height 30px
    width 0%
  .img-preview
    width 80%
    height 90%
    margin 2.5% 0 0 10%
    text-align center
  .img
    display inline-block
    max-width 100%
    max-height 100%
  .next-back
    display none
    position absolute
    bottom 10px
    left 0
    width 100%
  button
    margin 10px
.login-box
  display block
  text-align: center
  .twitter
    min-width 150px
    max-width 50%
    height 40px
    padding 10px
    display inline-block
    box-shadow: 0 0 1px #cdcdcd

.close-div
  position absolute
  right 5px
  top 5px
  height 30px
  width 30px
  font-size 2em
  cursor pointer
  &:hover
    background #cdcdcd

.edit
  .align-right
    position absolute
    top 10px
    right 10px

.profile
  font-size 1.5em
  word-wrap break-word
  .user
    position relative
    max-width 750px
    max-height 400px
    margin 50px 0 0 5%
    .icon
      img
        width 100px
        height 100px
    .name
      position absolute
      top 18px
      left 105px
      overflow hidden
  .bio
    position relative
    width 90%
    height 375px
    margin 75px 0 0 5%
  .bio-left
    width 60%
  .bio-right
    width 40%
  .bio-left, .bio-right
    height 100%
    padding 5%
    display block
    float left
    overflow hidden

.profile-content
  min-height 0px

.new
  .title
    max-width 500px
    width 30%
    min-width 100px
    height 50px
    margin 1%
  .message
    width 80%
    height 500px
    margin 1%
  .sidebar
    position absolute
    top 4%
    right 2%
    width 15%
    height 570px
    padding 20px
    font-size 1.3em
  .post
    margin 1%



// Media size style
@media all and (min-width: 1100px)
  .comments
    margin-left 10%

@media all and (max-width: 845px)

  .box-center
    max-width 98%
    width 98%
    margin-left 1%
  
  .spacer
    height 75px
  
  .content-cards
    width 80%
    height 150px
  
  .edit-box
    display none
    left 30%
    width 40%
  

  .search
    margin 30px
    width 70%
  



@media all and (max-width: 765px)
  .nav
    text-align center
  overflow-x hidden
  .navbar-collapse
    position relative
    margin-top 18px
    min-height 90px
    font-size 1.6em
  .navbar-header
    button.navbar-toggle
      box-shadow none
      border none
      &:hover
        background #fff
    .icon-bar
      background-color #000 !important

  .navbar-header, .navbar-header button.navbar-toggle, .navbar-header.icon-bar
    -webkit-border-radius: 0 !important;
    -moz-border-radius: 0 !important;
    border-radius: 0 !important;    
      
  nav .right-nav
    position relative
    float none

  nav .nav-user-pre
    position: relative
    right 0
    background none
    a 
      color green-med !important

  nav .nav-user
    display: inline-block
    position relative
    width 100%
    text-align center
    height 150px
    margin 10px
    img
      margin-left 10px
    li
      height 40px
      font-size 1.3em


  .post-author
    position absolute
    top 0
    right 0
    width 100%
    height 73px
    .name
      width 20%

    .bio
      display block
      float right
      width 65%
      height 60px
      overflow hidden
  .post-title
    max-width 90%
    margin-top 100px
    margin-left 5%
  
  .post-content
    max-width 95%
    padding-left 5%

  .comments-box
    .message
      font-size 1.5em
      width 90%

@media all and (max-width: 690px)

  .profile-background
    .img
      margin-left -25%
      display inline-block
      min-height 100%
      max-height 100%
      width 1200px
      position fixed
      top 0
      left 0
    .edit
      position absolute
      top 40px
      left 50px

  .post-author
    .name
      width 80%
      padding-top 10px
    .bio
      display none


  footer
    ul
      li
        width 97%


@media all and (max-width: 500px)

  nav
    right 0px

  .search
    margin 30px
    width 90%
    margin-left 5%
  
  .search button
    width 19%
    height 50px
    margin-left 1%
    padding 0

  .content
    margin 0
  
  .content-cards
    width 98%
    height 150px
    margin 2% 1% 0 1%
   

  .post-author 
    .bio
      display none
    .name
      width 60%


  .comments-box
    width 100%
  
  .comments-box .user
    width 90%
  
  .comments-box textarea
    width 100%
    height 100px
  

  .profile .user
    position relative
    max-width 450px
    height 100px
    margin 50px 2% 0 2%
  
  .profile .bio-left
    width 100%
  
  .profile .bio-right
    width 100%
  
  .profile .bio-left, .profile .bio-right
    height 50%
    text-align center
  
  .edit-box
    display none
    left 10%
    width 80%
  

  //New 

  .new .title
    max-width 500px
    width 98%
    min-width 100px
    height 50px
    margin 1%

  .new .message
    width 98%
    height 300px
    margin 1%

  .new .sidebar
    position absolute
    top 370px
    right 1%
    width 98%
    height 120px
    padding 2px
    font-size 1.5em

  .new .post
    margin 100px 0 0 20px




// extra features 


::-webkit-scrollbar  
  width 10px 
 
::-webkit-scrollbar-track  
  background #efefef 
  -webkit-box-shadow inset 1px 1px 2px rgba(0,0,0,0.1) 
 
::-webkit-scrollbar-track:hover
  background #dedede

::-webkit-scrollbar-thumb  
  background #CCC
  -webkit-box-shadow inset 1px 1px 2px rgba(0,0,0,0.2) 
  border-radius 1px
 
::-webkit-scrollbar-thumb:hover  
  background #AAA 
 
::-webkit-scrollbar-thumb:active  
  background #888 
  -webkit-box-shadow inset 1px 1px 2px rgba(0,0,0,0.3) 



::selection 
  background #000
  color #fff

