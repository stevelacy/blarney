.wrapper
  .profile-background
    img.img#profile-img(src='#{profile[0].background}')
    button.edit.bg-white-trans.box-shadow.white#edit-cover-button
      | Change Cover
  .edit-box.bg-white-trans-light#edit-cover-box.z-index.box-shadow
    #upload-box.upload-box.align-center
      form(action='/upload' name='form-cover' id='form-cover' method='post' enctype='multipart/form-data')
        input.bg-white-trans-light(type='file' name='image' id='file')
        input.white.bg-green(type='submit' name='sub-cover' id='sub-cover' value='Save')  
        br
      #status.text-small
        | .jpg, .jpeg, .png only
    #progress.progress.bg-white-trans
      .bar.bg-dark-grey
      .percent

  .spacer
  .align-center.z-index
    .content.bg-white-trans.box-center.box-shadow.align-left
      .profile
        .user
          .icon
            img(src='#{profile[0].image}')
          //.name.text-large.white(class='#{profile.colors.name}')
          .name.text-large.white
            | #{profile[0].name}
        .bio.bg.bg-white-pure
          //.bio-left(class='#{profile.colors.bio}')
          .bio-left
            | #{profile[0].description}
          .bio-right
            a(href="https://twitter.com/#{profile[0].handle}") Twitter  @#{profile[0].handle}

  .align-center.z-index
    .spacer
    .spacer
    .content.bg-white-shade.box-center.box-shadow-light.align-center.profile-content
      
      - if (posts){
      - each post in posts
        .content-cards.bg-white-pure.box-shadow-light.align-left
            a(href="/p/#{post.id}").title
              | #{post.title}
            .user
              img.icon(src="#{profile[0].image}")
              a(href="/#{profile[0].handle}").name.text-small
                | #{profile[0].name}
            .stats
              img.icon(src="/images/like.png")
              .likes.align-center.grey
                | #{post.likes}
      - }
      - else{
        h2 
          span.green #{profile[0].name} 
          | has not posted yet
      - }