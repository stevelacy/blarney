.spacer
.align-center
  .content.bg-white.box-center.box-shadow.align-left
    .post-author.bg-grey.z-index
      a(href='/#{user[0].handle}')
        img(src='#{user[0].image}').icon 
        .name.white #{user[0].name}
        .bio.white #{user[0].description}

    .post-title.text-med #{item.title}
    .post-stats.grey#rating-post(data-id= '#{item.id}')
      img(src='/images/like.png') 
      span
        | likes
    br
    .post-content #{item.content}
    .spacer
    if auth.loggedIn()
      .new-comment.bg-white-shade
        | Comment
        br
        form(action='/comment' method='post')
          textarea(name='message' id='message')
          input(type='hidden' name='post' id='post' value='#{id}')
          br
          br
          input.bg-green.white#comment-submit(type='submit')
    else
      .new-comment.bg-white-shade.align-center
        .spacer-50
        a(href='/login')
          button.bg-green.white.inline-block Login to comment      