.spacer-75.align-center
  .search.inline-block.align-left.trans
    form(action='')
      input.block#search-term(type='text' placeholder='Search')
      button.block.green#search Search
.align-center
  .content.bg-white-shade.box-center.box-shadow.align-center.trans#content-index

    if items
      each post in items
        .content-cards.bg-white-pure.box-shadow-light.align-left.trans
          a(href='/p/#{post.id}').title
            | #{post.title}
          .user
            a(href='/#{post.author.attributes.handle}')
              img.icon(src='#{post.author.attributes.image}')
              .name.text-small
                | #{post.author.attributes.name}
          .stats
            img.icon(src='images/like.png')
            .likes.align-center.grey
              | #{post.likes} 
    